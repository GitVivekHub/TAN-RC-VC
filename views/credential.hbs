<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Credential - {{subject.first_name}} {{subject.last_name}}</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background: #f5e6f5;
        color: #333;
      }

      header {
        background: #fff;
        padding: 1rem;
        text-align: center;
        border-bottom: 1px solid #ddd;
      }

      header img {
        height: 60px; /* adjust size as needed */
        margin-bottom: 0.5rem;
      }

      .container {
        padding: 2rem;
      }

      .card {
        background: #fff;
        border: 1px solid #e0c1e0;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
      }

      .flex-row {
        display: flex;
        gap: 2rem;
      }

      .key-box,
      .value-box {
        padding: 1rem;
        border-radius: 10px;
      }

      .key-box {
        background-color: #e0c1e0;
        color: #800080;
        min-width: 200px;
      }

      .value-box {
        background-color: #f3d9f3;
        flex: 1;
      }

      .row p {
        margin: 0.3rem 0;
      }
    </style>
  </head>
  <body>
    <header>
      <img src='{{logoBase64}}' alt='Logo' />
      <h1>The Ability Network</h1>
    </header>
    <main class='container'>
      <div class='card'>
        <h2>Issued Credential</h2>
        <div class='flex-row'>
          <div class='key-box'>
            <p>ID:</p>
            <p>Type:</p>
            <p>Issued On:</p>
            <p>Expires On:</p>
          </div>
          <div class='value-box'>
            <p>{{credential.id}}</p>
            <p>{{credential.type}}</p>
            <p>{{credential.issuanceDate}}</p>
            <p>{{credential.expirationDate}}</p>
          </div>
        </div>
      </div>

      <div class='card'>
        <h2>Credential Subject</h2>
        <div class='flex-row'>
          <div class='key-box'>
            {{#each subject}}
              <p>{{@key}}:</p>
            {{/each}}
          </div>
          <div class='value-box'>
            {{#each subject}}
              <p>{{this}}</p>
            {{/each}}
          </div>
        </div>
      </div>
    </main>
  </body>
</html>